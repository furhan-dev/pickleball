<p class="display-6 mt-5 mb-4 text-center">Find an open play court near you</p>
<div class="row g-3 p-0 mb-5 justify-content-center">
  <div class="col-auto">
    <input type="text" class="form-control" id="location" placeholder="Enter a location">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary search-courts">Search</button>
  </div>
</div>


<h3>Upcoming Events</h3>

{{#each events as |event| }}
<div class="card col shadow-sm my-2">
  <div class="card-body">
    <h5 class="card-title">{{event.name}} - {{event.date}}</h5>
    <div class="card-subtitle">
      <h6 class="mb-2 text-muted">{{event.location.name}} - {{event.location.address}}</h6>
    </div>
    <div class="card-text">
      <p class="my-4">{{event.description}}</p>
    </div>
<a href="/location/{{event.location.id}}" class="stretched-link"></a>
    
  </div>
</div>
{{/each}}

