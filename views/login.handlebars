<div class="row justify-content-center mt-5">
  <div id="login-container" class="col-auto">
    <form id="login-form" class="form login-form">
      <h3 class="text-center my-4">Sign in</h3>
      <hr class="my-3">
      <label for="email" class="my-1">Email:</label><br>
      <input type="text" name="email" id="email" class="form-control mb-2">
      <label for="password" class="my-1">Password:</label><br>
      <input type="password" name="password" id="password" class="form-control mb-2">
      <div class="pb-0">
        <small class="login-error text-danger"></small>
      </div>
      <input type="submit" name="login" class="btn btn-primary btn-md my-3" value="Login">
      <div id="register-link" class="text-center">
        <span>Don't have an account?<br><a href="/signup" class="text-primary">Register here</a></span>
      </div>
    </form>
  </div>

</div>

<script src="./assets/js/login.js"></script>